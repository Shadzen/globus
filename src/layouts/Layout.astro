---
// src/layouts/Layout.astro
import '../styles/fonts.scss'
import 'swiper/css'
import 'swiper/css/navigation'
import 'photoswipe/style.css'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'

interface Props {
    title: string
    userType?: 'tourist' | 'agent'
    heroTextColor?: 'light' | 'dark'
}

const { title, userType = 'tourist', heroTextColor = 'light' } = Astro.props
const base = import.meta.env.BASE_URL
---

<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="height=device-height, width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no"
        />
        <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`.replace(/\/+/g, '/')} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header userType={userType} heroTextColor={heroTextColor} />
        <main>
            <slot />
        </main>
        <Footer userType={userType} />
    </body>
</html>

<style lang="scss" is:global>
    :root {
        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;

        --safe-top: env(safe-area-inset-top);
        --safe-right: env(safe-area-inset-right);
        --safe-bottom: env(safe-area-inset-bottom);
        --safe-left: env(safe-area-inset-left);
    }

    *,
    *:before,
    *:after {
        box-sizing: border-box;
    }

    * {
        -ms-overflow-style: none;
        //overflow-y: scroll;
        touch-action: manipulation;
        scrollbar-width: none;
        &::-webkit-scrollbar {
            display: none;
        }
    }

    a {
        text-decoration: none;
        white-space: nowrap;
    }

    html {
        position: relative;
        height: 100%;
        scroll-behavior: smooth;
    }

    body {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100dvh;
        font-family: system-ui, sans-serif;
        background: $color-main;
        margin: 0;
        &._disable-scrolling {
            overflow: hidden;
        }
        @media (min-aspect-ratio: 21/9) {
            padding: 0 12.5%;
        }
    }

    main {
        flex: 1;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    section {
        position: relative;
        @include adaptive(width, 1920, 480);
        // @include side-paddings;
    }

    h1,
    h2 {
        margin: 0;
        @include font-kudry-sans;
        text-transform: uppercase;
        font-style: normal;
        font-weight: 300;
    }

    h1 {
        color: #fff;
        @include adaptive(font-size, 121, 59);
        line-height: 1.3;

        @include mobile {
            line-height: 1.1;
        }
    }

    h2 {
        color: $color-alternate;
        text-align: center;
        @include adaptive(font-size, 60, 38);
        line-height: 1.2;
        // flex: 1;

        @include mobile {
            // flex: none;
            width: 100%;
        }
    }

    p {
        margin: 0;
    }

    // Общий стиль для точек-маркеров
    .bullet {
        @include adaptive(width, 12, 10);
        @include adaptive(height, 12, 10);
        @include adaptive(min-width, 12, 10);
        border-radius: 50%;
        background-color: $color-accent;
        flex-shrink: 0;
    }

    .swiper {
        @include side-paddings;

        .swiper-wrapper {
            @include adaptive(gap, 16, 12);
        }

        &.swiper-initialized {
            padding-left: 0 !important;
            padding-right: 0 !important;

            .swiper-wrapper {
                gap: 0 !important;
            }
        }
    }

    .hero-section {
        @include flex-start-between;
        flex-direction: column;

        .hero-bg {
            @include abs-default;
            z-index: 0;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: top center;
            }

            &::after {
                content: '';
                display: block;
                @include abs-default;
                pointer-events: none;
                z-index: 2;
            }

            &._overlay-gradient {
                &::after {
                    background: linear-gradient(180deg, #00273f -14.94%, rgba(0, 39, 63, 0) 48.28%);
                }
            }

            &._overlay-double-gradient {
                &::after {
                    background:
                        linear-gradient(
                            180deg,
                            rgba(0, 39, 63, 0.04) 34.3%,
                            rgba(0, 39, 63, 0.75) 80.94%
                        ),
                        linear-gradient(
                            180deg,
                            rgba(0, 39, 63, 0.46) -14.94%,
                            rgba(0, 39, 63, 0) 48.28%
                        );
                }
            }

            &._overlay-darker {
                &::after {
                    background: linear-gradient(
                        0deg,
                        rgba(0, 39, 63, 0.7) 0%,
                        rgba(0, 39, 63, 0.7) 100%
                    );
                }
            }
        }

        .hero-content {
            @include side-paddings;
            display: flex;
            flex-direction: column;
            flex: 1;
            // @include adaptive(gap, 50, 12);
            width: 100%;
            position: relative;
            z-index: 2;
        }

        .hero-subtitle {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
        }

        .hero-buttons {
            display: flex;
            @include adaptive(gap, 20, 16);
            @include adaptive(margin-top, 30, 16);

            @include mobile {
                flex-direction: column;
                width: 100%;
            }
        }

        .hero-button {
            @include button-sized;
            @include adaptive(font-size, 22, 18);

            &._outline {
                @include button-outline;
            }
        }

        &._dark-text {
            .hero-nav {
                .breadcrumb {
                    a,
                    span {
                        color: $color-alternate;
                    }
                }

                .back-text {
                    color: $color-alternate;
                }
            }

            .hero-content {
                .hero-title,
                .hero-subtitle {
                    color: $color-alternate;
                }
            }
        }

        &._type-one {
            @include adaptive(padding-top, 410, 210);

            .hero-bg {
                position: relative;
                @include adaptive(margin-top, 50, 30);
                @include side-paddings;
                width: 100%;
                @include adaptive(min-height, 360, 231);

                @include desktop {
                    order: 2;
                }

                @include mobile {
                    order: 1;
                }
            }

            .hero-content {
                @include adaptive(margin-top, 30, 20);
                @include adaptive(gap, 50, 16);

                @include desktop {
                    flex-direction: row;
                    order: 1;
                }

                @include mobile {
                    order: 2;
                }
            }

            .hero-title {
                text-align: left;
            }
        }
    }
</style>
