---
import Layout from '@/layouts/Layout.astro'
import CountriesHero from '@/components/countries/CountriesHero.astro'
import VisasCountries from '@/components/visas/VisasCountries.astro'
import ContactCTA from '@/components/common/ContactCTA.astro'
import { COMPANY_NAME } from '@/scripts/utils'
---

<Layout title={`Страны - ${COMPANY_NAME}`} userType="agent" heroTextColor="dark">
