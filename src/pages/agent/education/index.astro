import EducationHero from '@/components/education/EducationHero.astro'
import EducationVideosGrid from '@/components/education/EducationVideosGrid.astro'
import EducationEvents from '@/components/education/EducationEvents.astro'
import ContactCTA from '@/components/common/ContactCTA.astro'
import { COMPANY_NAME } from '@/scripts/utils'
---

<Layout title={`Обучение - ${COMPANY_NAME}`} userType="agent" heroTextColor="dark">
    <EducationHero userType="agent" />
    <EducationVideosGrid userType="agent" />
    <EducationEvents userType="agent" />
    <ContactCTA title="Свяжитесь с нами для разработки персонального предложения" description="Наши менеджеры по работе с корпоративными клиентами готовы проконсультировать вас и подготовить коммерческое предложение, идеально соответствующее целям и бюджету вашей компании" />
</Layout>
