---
import Layout from '@/layouts/Layout.astro'
import SearchForm from '@/components/main/SearchForm.astro'
import TourCollections from '@/components/main/TourCollections.astro'
import GlobusNews from '@/components/main/GlobusNews.astro'
import AboutUs from '@/components/main/AboutUs.astro'
import ContactForm from '@/components/main/ContactForm.astro'
---

<Layout title="Глобус Тур">
    <section class="hero-section">
        <h1>искусство</h1>
        <h1>открывать</h1>
        <h1>мир</h1>
    </section>
    <SearchForm />
    <TourCollections />
    <GlobusNews />
    <AboutUs />
    <ContactForm />
</Layout>

<style lang="scss" is:global>
    .hero-section {
        @include adaptive(height, 1044, 1044);
        background-image: url('@/assets/images/main/hero-1.jpg');
        background-size: contain;
        background-position: top center;
        background-repeat: no-repeat;
        // background-attachment: fixed;
        padding-top: 20%;
        @include side-paddings;

        h1:nth-child(2) {
            @include adaptive(padding-left, 140, 140);
        }

        h1:nth-child(3) {
            @include adaptive(padding-left, 10, 10);
        }

        h1:nth-child(4) {
            @include adaptive(padding-left, 240, 240);
        }
    }
</style>
