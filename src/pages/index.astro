---
import Layout from '@/layouts/Layout.astro'
import SearchForm from '@/components/main/SearchForm.astro'
import TourCollections from '@/components/main/TourCollections.astro'
import GlobusNews from '@/components/main/GlobusNews.astro'
import AboutUs from '@/components/main/AboutUs.astro'
import ContactForm from '@/components/main/ContactForm.astro'
import heroDesktop from '@/assets/images/main/hero-1.jpg'
import heroMobile from '@/assets/images/main/hero-1-mobile.jpg'
---

<Layout title="Глобус Тур">
    <section class="hero-section">
        <picture class="hero-bg">
            <source
                media="(max-width: 480px)"
                srcset={heroMobile.src}
            />
            <img
                src={heroDesktop.src}
                alt=""
                loading="eager"
                decoding="async"
            />
        </picture>
        <div class="hero-content">
            <h1>искусство</h1>
            <h1>открывать</h1>
            <h1>мир</h1>
        </div>
        <button class="search-tour-btn" type="button" aria-label="Подобрать тур">
            Подобрать тур
        </button>
    </section>
    <SearchForm />
    <TourCollections />
    <GlobusNews />
    <AboutUs />
    <ContactForm />
</Layout>

<style lang="scss" is:global>
    .hero-section {
        @include flex-center-between;
        flex-direction: column;
        position: relative;
        @include adaptive(height, 1044, 972);
        padding-top: 20%;
        @include side-paddings;
        overflow: hidden;

        @include mobile {
            padding-top: 31%;
            padding-bottom: 30%;
        }

        .hero-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;

            img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                object-position: top center;

                @include mobile {
                    object-fit: cover;
                }
            }
        }

        .hero-content {
            position: relative;
            z-index: 1;

            h1:nth-child(2) {
                @include adaptive(padding-left, 140, 80);
            }

            h1:nth-child(3) {
                @include adaptive(padding-left, 10, 10);
            }

            h1:nth-child(4) {
                @include adaptive(padding-left, 240, 120);
            }
        }

        .search-tour-btn {
            @include button-default;
            display: none;
            position: relative;
            @include adaptive(height, 64, 64);
            z-index: 2;

            @include mobile {
                display: flex;
            }
        }
    }
</style>
