---
import Layout from '@/layouts/Layout.astro'
import NewsHero from '@/components/news/NewsHero.astro'
import NewsFilter from '@/components/news/NewsFilter.astro'
import NewsGrid from '@/components/news/NewsGrid.astro'
import NewsPagination from '@/components/news/NewsPagination.astro'
import NewsSlider from '@/components/news/NewsSlider.astro'
import ContactForm from '@/components/main/ContactForm.astro'
import { COMPANY_NAME } from '@/scripts/utils'
---

<Layout title={`Новости - ${COMPANY_NAME}`} userType="tourist" heroTextColor="dark">
    <NewsHero userType="tourist" />
    <NewsFilter />
    <NewsGrid userType="tourist" />
    <NewsPagination currentPage={1} totalPages={15} userType="tourist" />
    <NewsSlider userType="tourist" />
    <ContactForm userType="tourist" />
</Layout>
