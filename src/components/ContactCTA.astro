---
// src/components/ContactCTA.astro
import telegramIcon from '@/assets/icons/telegram-accent.svg'
import phoneIcon from '@/assets/icons/phone-accent.svg'

interface Props {
    title?: string
    description?: string
}

const { title, description } = Astro.props
---

<section class="contact-cta">
    <div class="contact-cta-container">
        {title && (
            <h2 class="contact-cta-title" set:html={title} />
        )}

        {description && (
            <p class="contact-cta-description" set:html={description} />
        )}

        <div class="contact-cta-buttons">
            <a href="https://t.me/+79130637716" class="contact-btn contact-btn-outline" target="_blank" rel="noopener noreferrer">
                <img src={telegramIcon.src} alt="Telegram" />
                <span>8 913 063 7716</span>
            </a>

            <a href="tel:+73832000500" class="contact-btn contact-btn-outline">
                <img src={phoneIcon.src} alt="Телефон" />
                <span>8 (383) 2000-500</span>
            </a>

            <button type="button" class="contact-btn contact-btn-primary">Оставить заявку</button>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .contact-cta {
        background: $color-alternate;
        @include adaptive(margin-top, 96, 67);
        @include adaptive(padding-top, 90, 82);
        @include adaptive(padding-bottom, 90, 82);

        .contact-cta-container {
            @include side-paddings;
            display: flex;
            flex-direction: column;
            align-items: center;
            @include adaptive(gap, 40, 32);
        }

        .contact-cta-title {
            color: $color-main;
        }

        .contact-cta-description {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
            color: #667c89;
            text-align: center;
            margin: 0;

            @include desktop {
                width: 58%;
            }
        }

        .contact-cta-buttons {
            display: flex;
            @include adaptive(column-gap, 182, 136);
            @include adaptive(row-gap, 2, 26);
            align-items: center;
            flex-wrap: wrap;
            justify-content: center;

            @include mobile {
                flex-direction: column;
                width: 100%;
            }
        }

        .contact-btn {
            @include flex-center;
            @include adaptive(gap, 20, 12);
            @include adaptive(height, 61, 60);
            @include adaptive(padding-left, 50, 30);
            @include adaptive(padding-right, 50, 30);
            border-radius: 500px;
            @include font-circe-regular;
            @include adaptive(font-size, 24, 18);
            line-height: 1.2;
            @include adaptive(letter-spacing, 2.4, 1.8);
            text-transform: uppercase;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;

            @include mobile {
                width: 100%;
            }

            img {
                @include adaptive(width, 40, 30);
                @include adaptive(height, 40, 30);
                flex-shrink: 0;
            }

            &:hover {
                opacity: 0.8;
                transform: translateY(-2px);
            }

            &:active {
                transform: translateY(0);
            }
        }

        .contact-btn-outline {
            background: transparent;
            border: 1px solid $color-accent;
            color: $color-accent;
        }

        .contact-btn-primary {
            background: $color-accent;
            border: 1px solid $color-accent;
            color: $color-main;
            @include adaptive(font-size, 16, 16);
            @include adaptive(letter-spacing, 3.2, 3.2);
        }
    }
</style>
