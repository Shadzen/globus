---
import { Image } from 'astro:assets'
import photo1 from '@/assets/images/news_type_one/news-type-one-photo-1.jpg'
import photo2 from '@/assets/images/news_type_one/news-type-one-photo-2.jpg'
import photo3 from '@/assets/images/news_type_one/news-type-one-photo-3.jpg'
---

<section class="news-gallery-section">
    <div class="news-gallery-container">
        <div class="gallery-background-line"></div>
        
        <div class="gallery-grid">
            <div class="gallery-item gallery-item-1">
                <Image
                    src={photo1}
                    alt="Gallery image 1"
                    loading="lazy"
                    quality={100}
                />
            </div>
            <div class="gallery-item gallery-item-2">
                <Image
                    src={photo2}
                    alt="Gallery image 2"
                    loading="lazy"
                    quality={100}
                />
            </div>
            <div class="gallery-item gallery-item-3">
                <Image
                    src={photo3}
                    alt="Gallery image 3"
                    loading="lazy"
                    quality={100}
                />
            </div>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .news-gallery-section {
        @include adaptive(margin-top, 64, 40);

        .news-gallery-container {
            @include side-paddings;
            width: 100%;
            position: relative;
        }

        .gallery-background-line {
            position: absolute;
            left: 0;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background-color: $color-alternate;
            @include adaptive(height, 384, 200);
            z-index: 1;

            @include mobile {
                display: none;
            }
        }

        .gallery-grid {
            position: relative;
            z-index: 2;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            grid-template-rows: auto auto;
            @include adaptive(gap, 30, 20);
            width: 100%;

            @include mobile {
                grid-template-columns: 1fr;
                grid-template-rows: auto;
            }
        }

        .gallery-item {
            position: relative;
            overflow: hidden;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
            }
        }

        .gallery-item-1 {
            grid-column: 1 / 7;
            grid-row: 2 / 3;
            @include adaptive(height, 599, 400);

            @include mobile {
                grid-column: 1;
                grid-row: auto;
            }
        }

        .gallery-item-2 {
            grid-column: 7 / 13;
            grid-row: 1 / 2;
            @include adaptive(height, 398, 300);

            @include mobile {
                grid-column: 1;
                grid-row: auto;
            }
        }

        .gallery-item-3 {
            grid-column: 9 / 13;
            grid-row: 2 / 3;
            @include adaptive(height, 389, 350);

            @include mobile {
                grid-column: 1;
                grid-row: auto;
            }
        }
    }
</style>
