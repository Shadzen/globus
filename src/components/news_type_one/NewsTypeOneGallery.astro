---
import { Image } from 'astro:assets'
import photo1 from '@/assets/images/news_type_one/news-type-one-photo-1.jpg'
import photo2 from '@/assets/images/news_type_one/news-type-one-photo-2.jpg'
import photo3 from '@/assets/images/news_type_one/news-type-one-photo-3.jpg'
---

<section class="news-gallery-section">
    <div class="section-container">
        <div class="gallery-background-line"></div>

        <div class="gallery-grid">
            <div class="gallery-item gallery-item-1">
                <Image
                    src={photo1}
                    alt="Gallery image 1"
                    loading="lazy"
                    quality={100}
                />
            </div>
            <div class="gallery-item gallery-item-2">
                <Image
                    src={photo2}
                    alt="Gallery image 2"
                    loading="lazy"
                    quality={100}
                />
            </div>
            <div class="gallery-item gallery-item-3">
                <Image
                    src={photo3}
                    alt="Gallery image 3"
                    loading="lazy"
                    quality={100}
                />
            </div>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .news-gallery-section {
        @include adaptive(margin-top, 60, 40);

        .gallery-background-line {
            position: absolute;
            left: 0;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background-color: $color-globus-blue;
            @include adaptive(height, 384, 461);
            z-index: 1;
        }

        .gallery-grid {
            position: relative;
            z-index: 2;
            display: grid;
            grid-template-columns: repeat(24, 1fr);
            grid-template-rows: repeat(24, 1fr);
            @include adaptive(gap, 30, 20);
            width: 100%;

            @include mobile {
                grid-template-columns: 1fr;
                grid-template-rows: auto;
            }
        }

        .gallery-item {
            position: relative;
            overflow: hidden;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                display: block;
            }
        }

        .gallery-item-1 {
            grid-column: 1 / 12;
            grid-row: 5 / 24;
            @include adaptive(height, 599, 177);

            @include mobile {
                grid-column: 1 / 17;
                grid-row: 15 / 24;
            }
        }

        .gallery-item-2 {
            grid-column: 13 / 23;
            grid-row: 1 / 24;
            @include adaptive(height, 398, 253);

            @include mobile {
                grid-column: 4 / 24;
                grid-row: 1 / 24;
            }
        }

        .gallery-item-3 {
            grid-column: 17 / 25;
            grid-row: 13 / 24;
            @include adaptive(height, 389, 200);

            @include mobile {
                grid-column: 8 / 24;
                grid-row: 24 / 24;
            }
        }
    }
</style>
