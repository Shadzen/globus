---
import HeroNav from '@/components/common/HeroNav.astro'

import heroDesktop from '@/assets/images/mice/hero-1.jpg'
import heroMobile from '@/assets/images/mice/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section mice-hero _dark-text _type-one">
    <picture class="hero-bg">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>

    <HeroNav
        items={[
            { label: 'Главная', href: `${base}${userType}/` },
            { label: 'Деловой туризм' },
        ]}
    />

    <div class="hero-content">
        <h2 class="hero-title">Деловой туризм</h2>
        <p class="hero-subtitle">
            Создаём безупречные бизнес-путешествия и незабываемые корпоративные события. Пока вы
            достигаете целей, мы создаём комфорт.
        </p>
    </div>
</section>

<style lang="scss" is:global>
    .mice-hero {
        .hero-title {
            @include adaptive(font-size, 74, 60);

            @include desktop {
                width: 50%;
            }
        }

        .hero-subtitle {
            @include adaptive(padding-right, 30, 0);

            @include desktop {
                width: 33%;
                margin-left: auto;
            }
        }
    }
</style>
