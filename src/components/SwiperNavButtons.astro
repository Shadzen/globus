---
// src/components/SwiperNavButtons.astro
import prevAccentIcon from '@/assets/icons/prev-accent.svg'
import nextAccentIcon from '@/assets/icons/next-accent.svg'

interface Props {
    containerClass?: string
}

const { containerClass = 'swiper-nav' } = Astro.props
---

<div class={`swiper-nav ${containerClass}`}>
    <button class="nav-btn nav-btn-prev" aria-label="Предыдущий слайд">
        <img src={prevAccentIcon.src} alt="" />
    </button>
    <button class="nav-btn nav-btn-next" aria-label="Следующий слайд">
        <img src={nextAccentIcon.src} alt="" />
    </button>
</div>

<style lang="scss" is:global>
    .swiper-nav {
        @include flex-center;
        @include adaptive(gap, 16, 12);
        flex-shrink: 0;
        z-index: 15;

        @include mobile {
            display: none;
        }
    }

    .nav-btn {
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        transition: all 0.3s;
        @include adaptive(width, 81, 60);
        @include adaptive(height, 81, 60);

        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        &:hover {
            transform: scale(1.05);
        }

        &:active {
            transform: scale(0.95);
        }

        &-disabled {
            opacity: 0.4;
            cursor: default;
            pointer-events: none;
            transform: scale(1) !important;
        }
    }
</style>
