---
import HeroNav from '@/components/common/HeroNav.astro'

import heroDesktop from '@/assets/images/partner/hero-1.jpg'
import heroMobile from '@/assets/images/partner/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'agent' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section partner-hero _type-screen">
    <picture class="hero-bg _overlay-darker">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>

    <HeroNav items={[
        { label: 'Главная', href: `${base}${userType}/` },
        { label: 'Стать партнером' },
    ]} />

    <div class="hero-content">
        <h1 class="hero-title">Стать партнером</h1>
        <p class="hero-subtitle">Создаём безупречные бизнес-путешествия и незабываемые корпоративные события. Пока вы достигаете целей, мы создаём комфорт.</p>
    </div>
</section>

<style lang="scss" is:global>
    .partner-hero {
        // @include adaptive(min-height, 820, 972);
        @include adaptive(padding-top, 465, 265);

        .hero-title {
            @include adaptive(font-size, 74, 60);

            &:nth-child(2) {
                @include adaptive(width, 60%, auto);
            }

            &:nth-child(3) {
                @include adaptive(padding-left, 456, 0);
            }
        }

        .hero-subtitle {
            @include adaptive(font-size, 26, 18);
            @include adaptive(width, 32%, 65%);
            color: $color-main;
            @include adaptive(padding-top, 0, 30);
        }
    }
</style>
