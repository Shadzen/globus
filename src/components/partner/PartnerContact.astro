---
import managerPhoto from '@/assets/images/about/contact-photo-1.jpg'
import telegramIcon from '@/assets/icons/telegram-accent-borderless.svg'
import phoneIcon from '@/assets/icons/phone-accent.svg'
---

<section class="partner-contact-section">
    <div class="partner-contact-container">
        <div class="partner-contact-card">
            <div class="partner-contact-avatar">
                <img src={managerPhoto.src} alt="Бубер Анастасия" loading="lazy" />
            </div>

            <div class="partner-contact-info">
                <h3 class="partner-contact-name">
                    Бубер<br />
                    Анастасия
                </h3>
                <p class="partner-contact-position">
                    Руководитель отдела по работе с агентствами
                </p>
            </div>
        </div>

        <div class="partner-contact-buttons">
            <a href="tel:+79130637730" class="partner-contact-btn-outline">
                <img src={telegramIcon.src} alt="Telegram" />
                <span>8 913 063 77 30</span>
            </a>

            <a href="tel:+73833340586" class="partner-contact-btn-outline">
                <img src={phoneIcon.src} alt="Телефон" />
                <span class="partner-contact-phone-numbers">
                    <span>+7 (383) 334-05-86,</span>
                    <span>334-05-89 доб. 725</span>
                </span>
            </a>

            <a href="mailto:dogovor@globus-tour.ru" class="partner-contact-btn">
                <span>dogovor@globus-tour.ru</span>
            </a>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .partner-contact-section {
        @include adaptive(margin-top, 80, 60);
        @include adaptive(padding-top, 80, 40);
        @include adaptive(padding-bottom, 80, 40);
        background-color: $color-alternate;

        .partner-contact-container {
            @include side-paddings;
            width: 100%;
            @include flex-center;
            @include adaptive(gap, 60, 40);
            flex-wrap: wrap;

            @include mobile {
                flex-direction: column;
            }
        }

        .partner-contact-card {
            display: flex;
            @include adaptive(gap, 25, 20);
            align-items: flex-start;

            @include mobile {
                flex-direction: column;
                align-items: center;
            }
        }

        .partner-contact-avatar {
            @include adaptive(width, 115, 111);
            @include adaptive(height, 115, 111);
            border-radius: 50%;
            overflow: hidden;
            flex-shrink: 0;

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
            }
        }

        .partner-contact-info {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 7, 10);

            @include mobile {
                align-items: center;
                text-align: center;
                width: 65%;
            }
        }

        .partner-contact-name {
            @include font-kudry-sans;
            @include adaptive(font-size, 28, 26);
            font-weight: 300;
            line-height: 1.2;
            color: $color-accent;
            text-transform: uppercase;
            margin: 0;
        }

        .partner-contact-position {
            @include font-circe-light;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
            color: $color-main;
            margin: 0;
        }

        .partner-contact-buttons {
            @include flex-center;
            @include adaptive(gap, 24, 20);
            flex-wrap: wrap;

            @include mobile {
                flex-direction: column;
                width: 100%;
            }
        }

        .partner-contact-btn {
            @include button-sized;
        }

        .partner-contact-btn-outline {
            @include button-sized;
            @include button-outline;
            @include adaptive(font-size, 24, 18);
            @include adaptive(letter-spacing, 2.4, 2.4);
        }

        .partner-contact-phone-numbers {
            display: flex;
            @include adaptive(gap, 5, 0);

            @include mobile {
                flex-direction: column;
            }
        }
    }
</style>
