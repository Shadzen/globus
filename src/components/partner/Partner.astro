            font-weight: 300;
            flex-shrink: 0;
            @include adaptive(width, 64, 32);
            text-align: center;
        }

        .step-content {
            display: flex;
            flex: 1;
            @include adaptive(gap, 100, 22);
            align-self: center;

            @include mobile {
                flex-direction: column;
            }
        }

        .step-text {
            @include font-circe-light;
            @include adaptive(font-size, 26, 18);
            color: $color-main;
            line-height: 1.2;
            @include adaptive(width, 50%, 100%);
