            li {
                @include adaptive(margin-bottom, 10, 8);

                &:last-child {
                    margin-bottom: 0;
                }
            }
        }

        .partner-documents {
            display: flex;
            flex-direction: column;
        }

        .documents-title {
            @include font-circe-regular;
            @include adaptive(font-size, 26, 18);
            color: $color-accent;
            text-transform: uppercase;
            line-height: 1.2;
        }

        .documents-link {
            @include font-circe-regular;
            color: $color-accent;
            text-decoration: underline;
            text-decoration-skip-ink: none;
            transition: opacity 0.3s;

            &:hover {
                opacity: 0.7;
            }
        }

        .documents-list {
            @include font-circe-light;
            @include adaptive(font-size, 26, 18);
            color: $color-main;
            line-height: 1.2;
            padding-left: 0;
            list-style-position: inside;
            @include adaptive(margin-top, 26, 12);
            margin-bottom: 0;

            li {
                @include adaptive(margin-bottom, 10, 8);

                &:last-child {
                    margin-bottom: 0;
                }
            }
        }

        .partner-footer {
            @include adaptive(padding-top, 46, 30);
        }

        .footer-text {
            @include font-circe-light;
            @include adaptive(font-size, 26, 18);
            color: $color-main;
            line-height: 1.2;
        }

        .footer-note {
            @include font-circe-light;
            @include adaptive(font-size, 20, 16);
            color: $color-main;
            line-height: 1.2;
            @include adaptive(margin-top, 12, 6);
        }
    }
</style>
