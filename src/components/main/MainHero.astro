---
import heroDesktop from '@/assets/images/main/hero-1.jpg'
import heroMobile from '@/assets/images/main/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
---

<section class="hero-section main-hero _type-screen">
    <picture class="hero-bg _overlay-gradient">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>
    <div class="hero-content">
        <h1 class="hero-title">искусство</h1>
        <h1 class="hero-title">открывать</h1>
        <h1 class="hero-title">мир</h1>
        {userType === 'tourist' && (
            <button class="button _sized" type="button" aria-label="Подобрать тур">
                Подобрать тур
            </button>
        )}
    </div>
</section>

<style lang="scss" is:global>
    .main-hero {
        @include adaptive(padding-top, 425, 150);
        @include adaptive(padding-bottom, 0, 75);

        .hero-content {
            .hero-title:nth-child(2) {
                @include adaptive(padding-left, 140, 80);
            }

            .hero-title:nth-child(3) {
                @include adaptive(padding-left, 10, 10);
            }

            .hero-title:nth-child(4) {
                @include adaptive(padding-left, 240, 120);
            }
        }

        .button {
            @include adaptive(display, none, flex);
        }
    }
</style>
