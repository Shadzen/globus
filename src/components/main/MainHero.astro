---
import heroDesktop from '@/assets/images/main/hero-1.jpg'
import heroMobile from '@/assets/images/main/hero-1-mobile.jpg'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
---

<section class="hero-section main-hero">
    <picture class="hero-bg _overlay-gradient">
        <source
            media="(max-width: 480px)"
            srcset={heroMobile.src}
        />
        <img
            src={heroDesktop.src}
            alt=""
            loading="eager"
            decoding="async"
        />
    </picture>
    <div class="hero-content">
        <div class="hero-title">
            <h1>искусство</h1>
            <h1>открывать</h1>
            <h1>мир</h1>
        </div>
        {userType === 'tourist' && (
            <button class="search-tour-btn" type="button" aria-label="Подобрать тур">
                Подобрать тур
            </button>
        )}
    </div>
</section>

<style lang="scss" is:global>
    .main-hero {
        @include adaptive(height, 1044, 972);
        @include adaptive(padding-top, 384, 148);
        @include adaptive(padding-bottom, 10, 144);

        .hero-content {
            @include flex-start-between;
            h1:nth-child(2) {
                @include adaptive(padding-left, 140, 80);
            }

            h1:nth-child(3) {
                @include adaptive(padding-left, 10, 10);
            }

            h1:nth-child(4) {
                @include adaptive(padding-left, 240, 120);
            }
        }

        .search-tour-btn {
            @include button-default;
            display: none;
            position: relative;
            @include adaptive(height, 64, 64);
            z-index: 2;

            @include mobile {
                display: flex;
            }
        }
    }
</style>
