---
import chevronDown from '@/assets/icons/chevron-down.svg'

interface AccordionSection {
    id: string
    title: string
    content: string
}

interface Props {
    sections: AccordionSection[]
    type?: 'docs' | string
    theme?: 'light' | 'dark'
    largeText?: boolean
}

const { sections, type, theme = 'dark', largeText = false } = Astro.props
---

<div class="accordion" data-type={type} data-theme={theme} data-large-text={largeText}>
    {
        sections.map((section) => (
            <div class="accordion-item" data-accordion-item>
                <div class="divider" />
                <button class="accordion-header" data-accordion-button aria-expanded="false">
                    <h3 class="accordion-title">{section.title}</h3>
                    <img src={chevronDown.src} alt="" class="accordion-icon" />
                </button>
                <div class="accordion-content" data-accordion-content>
                    <div class="accordion-content-inner" set:html={section.content} />
                </div>
            </div>
        ))
    }
</div>

<style lang="scss" is:global>
    .accordion {
        display: flex;
        flex-direction: column;

        .accordion-header {
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            @include adaptive(gap, 20, 16);
            background: none;
            border: none;
            @include adaptive(padding-top, 44, 22);
            @include adaptive(padding-bottom, 44, 22);
            cursor: pointer;
            text-align: left;
            @include adaptive(padding-left, 146, 0);
        }

        &[data-type='docs'] {
            .accordion-item:first-child .divider {
                display: none;
            }

            .accordion-header {
                padding-left: 0;
            }

            .accordion-content-inner {
                width: 100%;
            }
        }

        .accordion-title {
            @include font-kudry-sans;
            font-weight: 300;
            color: $color-alternate;
            @include adaptive(font-size, 28, 26);
            line-height: 1.2;
            text-transform: uppercase;
            margin: 0;
            flex: 1;
        }

        .accordion-icon {
            flex-shrink: 0;
            @include adaptive(width, 24, 20);
            @include adaptive(height, 24, 20);
            transition: transform 0.3s ease;
        }

        .accordion-header[aria-expanded='true'] .accordion-icon {
            transform: rotate(180deg);
        }

        .accordion-content {
            overflow: hidden;
            max-height: 0;
            transition: max-height 0.4s ease;
        }

        .accordion-content-inner {
            @include adaptive(padding-bottom, 44, 22);

            @include desktop {
                width: 80%;
                margin: 0 auto;
            }

            p {
                @include font-circe-regular;
                color: $color-alternate;
                @include adaptive(font-size, 20, 18);
                line-height: 1.2;
                margin: 0;
            }
        }

        &[data-theme='light'] {
            .accordion-title {
                color: $color-main;
            }

            .divider {
                background-color: $color-main;
            }

            .accordion-content-inner {
                p {
                    color: $color-main;

                    a {
                        color: $color-main;
                        transition: opacity 0.3s;

                        &:hover {
                            opacity: 0.7;
                        }
                    }
                }
            }
        }

        &[data-large-text='true'] {
            .accordion-content-inner {
                p {
                    @include adaptive(font-size, 28, 18);
                }
            }
        }
    }
</style>
