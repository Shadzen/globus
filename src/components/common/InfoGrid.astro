<section class="info-grid-section">
    <div class="section-container">
        <div class="info-grid">
            <slot />
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .info-grid-section {
        @include adaptive(margin-top, 120, 60);

        .info-grid {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 80, 30);
        }

        .info-grid-row {
            display: flex;
            justify-content: space-between;
            @include adaptive(gap, 52, 30);

            @include mobile {
                flex-direction: column;
            }
        }

        .info-text {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 30, 30);
            width: 33%;
            margin-right: auto;

            @include desktop {
                &._pos-1 {
                    @include adaptive(margin-top, 28, 28);
                }
            }

            @include mobile {
                width: 100%;
                order: 2;
            }

            p {
                @include font-circe-light;
                color: $color-alternate;
                @include adaptive(font-size, 26, 18);
                line-height: 1.2;
                margin: 0;
            }
        }

        .service-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 21, 18);
        }

        .service-list-item {
            display: flex;
            @include adaptive(gap, 10, 10);
            align-items: flex-start;

            .bullet {
                @include adaptive(margin-top, 8, 6);
            }
        }

        .service-list-text {
            @include font-circe-light;
            color: $color-alternate;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
            flex: 1;
        }

        .info-image {
            overflow: hidden;

            img {
                width: 100%;
                height: auto;
                display: block;
            }

            &._pos-1 {
                @include adaptive(margin-top, -264, 0);
            }

            @include desktop {
                max-width: 59%;
            }

            @include mobile {
                width: 100%;
                @include adaptive(height, 0, 231);
                order: 1;

                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    object-position: center;
                }
            }
        }
    }
</style>
