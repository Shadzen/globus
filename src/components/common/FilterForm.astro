<section class="filter-form-section">
    <div class="filter-form-container">
        <form class="filter-form">
            <div class="filter-form-field">
                <label for="country" class="filter-form-label">Страна</label>
                <div class="filter-form-input-wrapper">
                    <select id="country" name="country" class="filter-form-select" autocomplete="country">
                        <option value="">Все</option>
                        <option value="egypt">Египет</option>
                        <option value="thailand">Таиланд</option>
                        <option value="uae">ОАЭ</option>
                        <option value="china">Китай</option>
                        <option value="india">Индия</option>
                        <option value="bali">Бали</option>
                    </select>
                    <div class="filter-form-underline"></div>
                </div>
            </div>

            <div class="filter-form-field">
                <label for="period" class="filter-form-label">Период публикации</label>
                <div class="filter-form-input-wrapper">
                    <select id="period" name="period" class="filter-form-select" autocomplete="off">
                        <option value="">За всё время</option>
                        <option value="2025">2025</option>
                        <option value="2024">2024</option>
                        <option value="2023">2023</option>
                        <option value="2022">2022</option>
                    </select>
                    <div class="filter-form-underline"></div>
                </div>
            </div>

            <div class="filter-form-field">
                <label for="search" class="filter-form-label">Поиск</label>
                <div class="filter-form-input-wrapper">
                    <input
                        type="text"
                        id="search"
                        name="search"
                        placeholder="Введите ключевое слово"
                        class="filter-form-input"
                        autocomplete="off"
                    />
                    <div class="filter-form-underline"></div>
                </div>
            </div>

            <button type="submit" class="filter-form-button">
                <span>Применить</span>
            </button>
        </form>
    </div>
</section>

<style lang="scss" is:global>
    .filter-form-section {
        @include adaptive(margin-top, 60, 60);
        background-color: $color-alternate;
        @include adaptive(padding-top, 52, 70);
        @include adaptive(padding-bottom, 52, 70);

        .filter-form-container {
            @include side-paddings;
            width: 100%;
        }

        .filter-form {
            display: flex;
            align-items: flex-end;
            @include adaptive(gap, 50, 45);
            @include adaptive(padding-left, 64, 0);
            @include adaptive(padding-right, 64, 0);

            @include mobile {
                flex-direction: column;
                align-items: stretch;
            }
        }

        .filter-form-field {
            flex: 1;
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 18, 16);

            @include mobile {
                width: 100%;
            }
        }

        .filter-form-label {
            @include font-circe-regular;
            @include adaptive(font-size, 16, 18);
            color: rgba($color-main, 0.55);
            line-height: 1.6;
            text-transform: uppercase;
            @include adaptive(letter-spacing, 3.2, 3.2);
        }

        .filter-form-input-wrapper {
            position: relative;
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 12, 10);
        }

        .filter-form-select,
        .filter-form-input {
            @include font-circe-light;
            @include adaptive(font-size, 26, 26);
            color: $color-main;
            line-height: 1.2;
            background: transparent;
            border: none;
            outline: none;
            padding: 0;
            appearance: none;
            cursor: pointer;
            @include adaptive(height, 28, 24);

            &::placeholder {
                color: rgba($color-main, 0.3);
            }
        }

        .filter-form-input {
            cursor: text;
        }

        .filter-form-select {
            option {
                background-color: $color-alternate;
                color: $color-main;
            }
        }

        .filter-form-underline {
            width: 100%;
            height: 1px;
            background-color: $color-accent;
        }

        .filter-form-button {
            @include button-sized;
            align-self: center;
        }
    }
</style>
