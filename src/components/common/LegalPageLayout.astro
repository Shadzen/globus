---
interface Props {
    title: string
    narrowContainer?: boolean
    dark?: boolean
}

const { title, narrowContainer = true, dark = false } = Astro.props
---

<section class="legal-page-section" data-dark={dark}>
    <div class="legal-page-container" data-narrow={narrowContainer}>
        <h2 class="legal-title">{title}</h2>

        {
            Astro.slots.has('intro') && (
                <div class="legal-intro">
                    <slot name="intro" />
                </div>
            )
        }

        <div class="legal-content">
            <slot />
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .legal-page-section {
        @include adaptive(margin-top, 40, 40);
        @include flex-center;

        .legal-page-container {
            @include side-paddings;
            width: 100%;

            &[data-narrow='true'] {
                width: 85%;
            }

            @include mobile {
                width: 100% !important;
            }
        }

        .legal-title {
            @include adaptive(font-size, 60, 34);

            @include desktop {
                width: 90%;
                margin: 0 auto;
            }
        }

        .legal-intro {
            @include adaptive(margin-top, 78, 40);
            margin-left: auto;
            margin-right: auto;
            width: 80%;

            @include mobile {
                width: 100%;
            }

            p {
                @include font-circe-regular;
                color: $color-alternate;
                @include adaptive(font-size, 20, 18);
                line-height: 1.2;
                margin: 0;

                a {
                    color: $color-alternate;
                    text-decoration: none;
                    transition: opacity 0.3s ease;

                    &:hover {
                        opacity: 0.7;
                    }
                }
            }

            ul {
                list-style: disc;
                @include adaptive(padding-left, 30, 24);
                margin: 0;
                width: 70%;

                @include mobile {
                    width: 100%;
                }

                li {
                    @include font-circe-regular;
                    color: $color-alternate;
                    @include adaptive(font-size, 20, 18);
                    line-height: 1.2;
                    @include adaptive(margin-top, 12, 12);
                    @include adaptive(margin-bottom, 12, 12);
                }
            }
        }

        .legal-content {
            @include adaptive(margin-top, 44, 22);
        }

        &[data-dark='true'] {
            background-color: $color-alternate;
            @include adaptive(padding-top, 60, 30);
            @include adaptive(padding-bottom, 60, 30);
            @include adaptive(margin-top, 60, 30);

            .legal-title {
                color: $color-accent;
            }
        }
    }
</style>
