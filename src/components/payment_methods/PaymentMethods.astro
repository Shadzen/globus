</LegalPageLayout>

<style lang="scss" is:global>
    .payment-sections {
        display: flex;
        flex-direction: column;
    }

    .section-header {
        @include adaptive(padding-top, 44, 22);
        @include adaptive(padding-bottom, 44, 22);

        @include desktop {
            @include adaptive(padding-left, 146, 146);
        }
    }

    .section-title {
        @include font-kudry-sans;
        font-weight: 300;
        color: $color-alternate;
        @include adaptive(font-size, 28, 26);
        line-height: 1.2;
        text-transform: uppercase;
        margin: 0;
    }

    .section-content {
        @include desktop {
            width: 80%;
            margin: 0 auto;
        }

        p {
            @include font-circe-regular;
            color: $color-alternate;
            @include adaptive(font-size, 20, 18);
            line-height: 1.2;
            margin: 0;
        }

        ul {
            list-style: disc;
            @include adaptive(padding-left, 30, 24);
            margin: 0;

            li {
                @include font-circe-regular;
                color: $color-alternate;
                @include adaptive(font-size, 20, 18);
                line-height: 1.2;
                @include adaptive(margin-top, 12, 12);
                @include adaptive(margin-bottom, 12, 12);
            }
        }
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        @include adaptive(gap, 34, 28);
    }

    .contact-item {
        display: flex;
        flex-direction: column;
        @include adaptive(gap, 8, 6);
    }

    .contact-label {
        @include font-circe-regular;
        color: #667c89;
        @include adaptive(font-size, 20, 18);
        line-height: 1.2;
        margin: 0;
    }

    .contact-value {
        @include font-circe-light;
        font-weight: 350;
        color: $color-alternate;
        @include adaptive(font-size, 26, 22);
        line-height: 1.2;
        margin: 0;

        a {
            color: $color-alternate;
            text-decoration: underline;
            transition: opacity 0.3s ease;

            &:hover {
                opacity: 0.7;
            }
        }
    }
</style>
