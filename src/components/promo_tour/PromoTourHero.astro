---
import HeroNav from '@/components/common/HeroNav.astro'

import heroDesktop from '@/assets/images/promo_tour/hero-1.jpg'
import heroMobile from '@/assets/images/promo_tour/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'agent' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section promo-tour-hero _type-screen">
    <picture class="hero-bg _overlay-darker">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>

    <HeroNav
        items={[
            { label: 'Главная', href: `${base}${userType}/` },
            { label: 'Рекламные туры', href: `${base}${userType}/promo_tours/` },
            { label: 'Мальдивы: Рекламный тур с 22.07 по 01.08.2025' },
        ]}
    />

    <div class="hero-content">
        <h1 class="hero-title">Мальдивы: Рекламный тур с 22.07 по 01.08.2025</h1>
        <p class="hero-subtitle">Группа набрана</p>
    </div>
</section>

<style lang="scss" is:global>
    .promo-tour-hero {
        @include adaptive(padding-top, 465, 265);

        .hero-title {
            @include adaptive(font-size, 74, 60);
            @include adaptive(width, 63%, auto);

            @include desktop {
                margin: 0 auto;
                text-align: center;
            }
        }

        .hero-subtitle {
            @include adaptive(font-size, 26, 18);
            color: $color-main;
            @include adaptive(padding-top, 30, 20);

            @include desktop {
                margin: 0 auto;
                text-align: center;
            }
        }
    }
</style>
