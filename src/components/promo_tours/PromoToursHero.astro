---
import HeroNav from '@/components/common/HeroNav.astro'

interface Props {
    userType?: 'tourist' | 'agent'
    backButtonText?: string
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section _dark-text _type-one _centered">
    <HeroNav items={[
        { label: 'Главная', href: `${base}${userType}/` },
        { label: 'Рекламные туры' },
    ]} />

    <div class="hero-content">
        <h2 class="hero-title">Рекламные туры</h2>
    </div>
</section>