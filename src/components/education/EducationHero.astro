---
import HeroNav from '@/components/common/HeroNav.astro'

import heroDesktop from '@/assets/images/education/hero-1.jpg'
import heroMobile from '@/assets/images/education/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section education-hero _dark-text _type-one">
    <picture class="hero-bg">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>

    <HeroNav items={[
        { label: 'Главная', href: `${base}${userType}/` },
        { label: 'Обучение' },
    ]} />

    <div class="hero-content">
        <h2 class="hero-title">Обучение</h2>
    </div>
</section>

<style lang="scss" is:global>
    .education-hero {
        .hero-title {
            @include adaptive(font-size, 74, 60);
            margin: 0 auto;

            // @include desktop {
            //     width: 22%;
            // }
        }
    }
</style>
