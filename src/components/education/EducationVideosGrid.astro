---
import VideosGrid from '@/components/education/VideosGrid.astro'
import { webinarsData } from '@/data/webinars'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'agent' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="education-videos-section">
    <div class="education-videos-container">
        <h2 class="education-videos-title">Записи вебинаров</h2>

        <VideosGrid videos={webinarsData} userType={userType} />

        <div class="education-videos-footer">
            <a href={`${base}${userType}/webinar_archive/`} class="education-videos-button">
                <span>Архив вебинаров</span>
            </a>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .education-videos-section {
        @include adaptive(margin-top, 120, 60);
        background-color: $color-alternate;
        @include adaptive(padding-top, 80, 60);
        @include adaptive(padding-bottom, 80, 60);

        .education-videos-container {
            @include side-paddings;
            width: 100%;
        }

        .education-videos-title {
            color: $color-main;
            text-align: center;
            @include adaptive(margin-bottom, 60, 30);
        }

        .education-videos-footer {
            display: flex;
            justify-content: center;
            @include adaptive(margin-top, 60, 60);
        }

        .education-videos-button {
            @include button-sized;
        }
    }
</style>
