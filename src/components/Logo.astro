---
import LogoLight from '@/assets/images/logo/logo-light.svg'
import LogoDark from '@/assets/images/logo/logo-dark.svg'
import LogoBlack from '@/assets/images/logo/logo-black.svg'

interface Props {
    color?: 'light' | 'dark' | 'black',
    size?: 'default' | 'small' | 'large',
    class?: string,
}

const {
    color = 'light',
    size = 'default',
    class: className,
} = Astro.props

const logos = {
    light: LogoLight,
    dark: LogoDark,
    black: LogoBlack,
}

const selectedLogo = logos[color]
const base = import.meta.env.BASE_URL
---

<a href={base} class:list={['logo-wrapper', `_${size}`, className]}>
    <img src={selectedLogo.src} alt="Глобус Тур" />
</a>

<style lang="scss" is:global>
    .logo-wrapper {
        position: relative;
        flex-shrink: 0;

        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        &._default {
            @include adaptive(width, 410, 410);
            @include adaptive(height, 116, 116);
        }

        &._small {
            @include adaptive(width, 227, 227);
            @include adaptive(height, 64, 64);
        }

        &._large {
            // оставляем для будущих размеров
        }
    }
</style>
