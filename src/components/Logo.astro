---
import LogoLight from '@/assets/images/logo/logo-light.svg'
import LogoDark from '@/assets/images/logo/logo-dark.svg'

interface Props {
    color?: 'light' | 'dark' | 'black',
    size?: 'default' | 'small' | 'large',
    class?: string,
    userType?: 'tourist' | 'agent'
}

const {
    color = 'light',
    size = 'default',
    class: className,
    userType = 'tourist',
} = Astro.props

const base = import.meta.env.BASE_URL
const logoUrl = `${base}${userType}/`
---

<a href={logoUrl} class:list={['logo-wrapper', `_${size}`, `_${color}`, className]}>
    <img src={LogoLight.src} alt="Глобус Тур" class="logo-light" />
    <img src={LogoDark.src} alt="Глобус Тур" class="logo-dark" />
</a>

<style lang="scss" is:global>
    .logo-wrapper {
        position: relative;
        flex-shrink: 0;
        z-index: 1001;

        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            position: absolute;
            top: 0;
            left: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .logo-light {
            opacity: 1;
        }

        .logo-dark {
            opacity: 0;
        }

        // Когда выбран темный логотип
        &._dark {
            .logo-light {
                opacity: 0;
            }

            .logo-dark {
                opacity: 1;
            }
        }

        &._default {
            @include adaptive(width, 410, 200);
            @include adaptive(height, 116, 56);
        }

        &._small {
            @include adaptive(width, 227, 227);
            @include adaptive(height, 64, 64);
        }

        &._large {
            // оставляем для будущих размеров
        }
    }
</style>
