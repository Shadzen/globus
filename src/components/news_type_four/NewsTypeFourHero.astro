---
import HeroNav from '@/components/common/HeroNav.astro'

import heroDesktop from '@/assets/images/news_type_four/hero-1.jpg'
import heroMobile from '@/assets/images/news_type_four/hero-1-mobile.jpg'

import { BREAKPOINTS } from '@/scripts/utils'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section news-type-four-hero _dark-text _type-one">
    <picture class="hero-bg _overlay-darker">
        <source media={`(max-width: ${BREAKPOINTS.mobile}px)`} srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
        <p class="hero-subtitle">
            Мы подготовили для вас подборку лучших спецпредложений от отелей на Мальдивах, которые
            подарят вашим клиентам незабываемые впечатления и комфортный отдых на райских островах!
        </p>
    </picture>

    <HeroNav
        items={[
            { label: 'Главная', href: `${base}${userType}/` },
            { label: 'Глобус-News', href: `${base}${userType}/news/` },
            { label: 'Мальдивы' },
        ]}
    />

    <div class="hero-content">
        <h2 class="hero-title">Мальдивы: Лучшие<br />спецпредложения месяца</h2>
        <p class="hero-subtitle">При раннем бронировании выгода до 40%!</p>
    </div>
</section>

<style lang="scss" is:global>
    .news-type-four-hero {
        .hero-bg {
            @include mobile {
                order: 2 !important;
            }

            .hero-subtitle {
                color: $color-main;
                @include center-xy;
                z-index: 3;
                text-align: center;
                width: 80%;
            }
        }

        .hero-content {
            flex-direction: column !important;
            gap: 0 !important;

            @include mobile {
                order: 1 !important;
            }
        }

        .hero-title {
            width: 100%;
            text-align: center !important;

            @include desktop {
                margin: 0 auto;
            }

            @include mobile {
                text-align: left !important;
            }
        }

        .hero-subtitle {
            @include adaptive(padding-top, 14, 16);

            @include desktop {
                margin: 0 auto;
            }
        }
    }
</style>
