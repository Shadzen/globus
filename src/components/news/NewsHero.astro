---
import HeroNav from '@/components/HeroNav.astro'

import heroDesktop from '@/assets/images/news/news-page-hero-1.jpg'
import heroMobile from '@/assets/images/news/news-page-hero-1-mobile.jpg'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section news-hero">
    <picture class="hero-bg">
        <source media="(max-width: 480px)" srcset={heroMobile.src} />
        <img src={heroDesktop.src} alt="" loading="eager" decoding="async" />
    </picture>

    <HeroNav items={[{ label: 'Главная', href: `${base}${userType}/` }, { label: 'Глобус-News' }]} textColor="dark" />

    <div class="hero-content">
        <h1 class="hero-title">Глобус-</h1>
        <h1 class="hero-title">news</h1>
        <p class="hero-subtitle">Эксклюзивные статьи и подборки в одном месте. Мы создаём путешествия мечты, помогая тысячам туристов открывать мир с комфортом и удовольствием</p>
    </div>
</section>

<style lang="scss" is:global>
    .news-hero {
        @include adaptive(height, 1044, 700);
        @include adaptive(padding-top, 502, 510);

        .hero-bg {
            @include adaptive(height, 754, 231);
            @include adaptive(width, 852, 450);
            bottom: 0;
            @include adaptive(right, 100, 15);
            left: auto;

            @include desktop {
                top: auto;
            }

            @include mobile {
                @include adaptive(top, 250, 250);
            }
        }

        .hero-content {
            z-index: 2;
            flex-wrap: wrap;
            flex-direction: row;
            flex: 0;
        }

        .hero-title {
            color: $color-alternate;
            @include adaptive(padding-right, 60, 12);
            @include adaptive(font-size, 110, 60);

            @include desktop {
                line-height: 1;

                &:nth-child(2) {
                    @include adaptive(padding-left, 244, 2);
                }
            }

            @include mobile {
                line-height: 1.2;
            }
        }

        .hero-subtitle {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
            color: $color-alternate;
            @include adaptive(padding-top, 12, 16);

            @include desktop {
                @include adaptive(padding-left, 248, 2);
                width: 41%;
            }
        }
    }
</style>
