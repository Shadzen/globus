---
// Компонент фильтра новостей
---

<section class="news-filter">
    <div class="section-container">
        <div class="filter-content">
            <div class="filter-field">
                <label class="filter-label" for="filter-topic">тема</label>
                <div class="filter-select">
                    <select class="filter-input" id="filter-topic" name="topic">
                        <option value="all">Все</option>
                        <option value="travel">Путешествия</option>
                        <option value="destinations">Направления</option>
                        <option value="tips">Советы</option>
                    </select>
                    <div class="filter-underline"></div>
                </div>
            </div>

            <div class="filter-field">
                <label class="filter-label" for="filter-period">период публикации</label>
                <div class="filter-select">
                    <select class="filter-input" id="filter-period" name="period">
                        <option value="all">За всё время</option>
                        <option value="week">За неделю</option>
                        <option value="month">За месяц</option>
                        <option value="year">За год</option>
                    </select>
                    <div class="filter-underline"></div>
                </div>
            </div>

            <div class="filter-field">
                <label class="filter-label" for="filter-search">поиск</label>
                <div class="filter-select">
                    <input
                        type="text"
                        class="filter-input search-input"
                        id="filter-search"
                        name="search"
                        placeholder="Введите ключевое слово"
                    />
                    <div class="filter-underline"></div>
                </div>
            </div>

            <button class="button _sized" type="button"> Найти </button>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .news-filter {
        background-color: $color-globus-blue;
        @include adaptive(padding-top, 52, 32);
        @include adaptive(padding-bottom, 52, 32);

        .filter-content {
            display: flex;
            align-items: flex-end;
            @include adaptive(gap, 50, 25);

            @include mobile {
                flex-direction: column;
                align-items: stretch;
            }
        }

        .filter-field {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 18, 16);
            flex: 1;
            min-width: 0;

            @include mobile {
                width: 100%;
            }
        }

        .filter-label {
            @include font-circe-regular;
            @include adaptive(font-size, 16, 14);
            line-height: 1.6;
            @include adaptive(letter-spacing, 3.2, 2.8);
            text-transform: uppercase;
            color: $color-globus-cream;
            opacity: 0.55;
        }

        .filter-select {
            position: relative;
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 12, 10);
        }

        .filter-input {
            @include font-circe-light;
            @include adaptive(font-size, 26, 22);
            line-height: 1.2;
            color: $color-globus-cream;
            background: transparent;
            border: none;
            outline: none;
            @include adaptive(height, 28, 26);
            padding: 0;
            appearance: none;
            cursor: pointer;
            width: 100%;

            option {
                background-color: $color-alternate;
                color: $color-globus-cream;
            }

            &.search-input {
                cursor: text;
            }

            &::placeholder {
                color: $color-globus-light-blue;
            }
        }

        .filter-underline {
            height: 1px;
            background-color: $color-globus-sand;
            width: 100%;
        }

        // Убираем стрелку у select в разных браузерах
        select.filter-input {
            background-image: none;

            &::-ms-expand {
                display: none;
            }
        }
    }
</style>
