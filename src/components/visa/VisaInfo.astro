---
import InfoList from '@/components/common/InfoList.astro'
import visaIcon1 from '@/assets/icons/visa-icon-1.svg'
import visaIcon2 from '@/assets/icons/visa-icon-2.svg'
import visaIcon3 from '@/assets/icons/visa-icon-3.svg'
import visaIcon4 from '@/assets/icons/visa-icon-4.svg'

const items = [
    {
        icon: visaIcon1.src,
        label: 'Цена',
        value: '3000 руб.',
    },
    {
        icon: visaIcon2.src,
        label: 'срок оформления',
        value: '7 рабочих дней',
    },
    {
        icon: visaIcon3.src,
        label: 'дополнительно оплачивается',
        description: 'Консульский и сервисный сборы в размере 140 евро (сбор оплачивается в рублях в Визовом центре при подаче документов)',
    },
    {
        icon: visaIcon4.src,
        label: 'Важно!',
        list: [
            'Необходимо предоставить документы, которые подтверждают полную оплату отеля и билетов',
            'Для подачи документов необходимо личное присутствие в визовом центре',
        ],
    },
]
---

<InfoList items={items} dark />