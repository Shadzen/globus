---
import HeroNav from '@/components/common/HeroNav.astro'

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props
const base = import.meta.env.BASE_URL
---

<section class="hero-section webinar-archive-hero _dark-text _type-one">
    <HeroNav items={[
        { label: 'Главная', href: `${base}${userType}/` },
        { label: 'Обучение', href: `${base}${userType}/education/` },
        { label: 'Архив вебинаров' },
    ]} />

    <div class="hero-content">
        <h2 class="hero-title">Архив вебинаров</h2>
    </div>
</section>

<style lang="scss" is:global>
    .webinar-archive-hero {
        .hero-title {
            @include adaptive(font-size, 74, 60);
            margin: 0 auto;
            text-align: center !important;
        }
    }
</style>
