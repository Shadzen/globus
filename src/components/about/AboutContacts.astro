    name: string
    position: string
    email: string
    phone: string
    image: ImageMetadata
}

interface ContactTab {
    id: string
    label: string
    people: ContactPerson[]
}

interface Props {
    userType?: 'tourist' | 'agent'
}

const { userType = 'tourist' } = Astro.props

// Все менеджеры
const allManagers: ContactPerson[] = [
