---
const pricingData = [
    {
        accommodation: 'Комфорт',
        meal: 'AI',
        price: 'от 1960 $',
    },
    {
        accommodation: 'Эконом',
        meal: 'BB',
        price: 'от 1500$',
    },
    {
        accommodation: 'Комфорт+',
        meal: 'BB',
        price: 'от 2340 $',
    },
    {
        accommodation: 'Комфорт',
        meal: 'AI',
        price: 'от 1960 $',
    },
    {
        accommodation: 'Эконом',
        meal: 'BB',
        price: 'от 1500$',
    },
    {
        accommodation: 'Комфорт+',
        meal: 'BB',
        price: 'от 2340 $',
    },
]
---

<section class="hotel-pricing">
    <!-- Search Form -->
    <div class="pricing-search-form">
        <div class="pricing-search-container">
            <div class="search-field">
                <label for="departure-date" class="search-label">Дата вылета</label>
                <input
                    type="text"
                    id="departure-date"
                    name="departure-date"
                    class="search-input"
                    placeholder="16 сен - 25 сен"
                />
            </div>

            <div class="search-field">
                <label for="tourists" class="search-label">Туристы</label>
                <input
                    type="text"
                    id="tourists"
                    name="tourists"
                    class="search-input"
                    placeholder="2 взрослых"
                />
            </div>

            <button class="button _sized">Найти</button>
        </div>
    </div>

    <!-- Pricing Table -->
    <div class="pricing-table-container">
        <div class="pricing-table">
            <!-- Table Header -->
            <div class="pricing-header">
                <div class="header-cell">Размещение</div>
                <div class="header-cell">Питание</div>
                <div class="header-cell">Цена</div>
            </div>

            <!-- Table Rows -->
            {
                pricingData.map((item) => (
                    <div class="pricing-row">
                        <div class="pricing-cell">{item.accommodation}</div>
                        <div class="pricing-cell">{item.meal}</div>
                        <div class="pricing-cell pricing-cell-price">
                            <button class="button _sized _outline">{item.price}</button>
                        </div>
                    </div>
                ))
            }
        </div>

        <button class="button _sized">написать менеджеру</button>
    </div>
</section>

<style lang="scss" is:global>
    .hotel-pricing {
        // Search Form
        .pricing-search-form {
            background: $color-alternate;
            @include adaptive(padding-top, 64, 40);
            @include adaptive(padding-bottom, 64, 40);

            .button {
                @include adaptive(margin-top, 0, 30);
            }
        }

        .pricing-search-container {
            @include side-paddings;
            display: flex;
            align-items: flex-end;
            @include adaptive(gap, 40, 20);
            flex-wrap: wrap;

            @include mobile {
                flex-direction: column;
                align-items: stretch;
            }
        }

        .search-field {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 12, 10);
            flex: 1;
            min-width: 0;

            @include mobile {
                flex: none;
                width: 100%;
            }
        }

        .search-label {
            @include font-circe-regular;
            @include adaptive(font-size, 16, 18);
            line-height: 1.6;
            @include adaptive(letter-spacing, 3.2, 2.8);
            text-transform: uppercase;
            color: $color-main;
            opacity: 0.55;
        }

        .search-input {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 26);
            line-height: 1.2;
            color: $color-main;
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba($color-globus-sand, 0.5);
            @include adaptive(padding-bottom, 12, 10);
            outline: none;
            cursor: pointer;
            transition: border-color 0.3s;

            &:hover,
            &:focus {
                border-bottom-color: $color-globus-sand;
            }
        }

        // Pricing Table
        .pricing-table-container {
            @include side-paddings;
            @include adaptive(padding-top, 80, 50);

            > .button {
                @include adaptive(margin-top, 60, 40);
                margin-left: auto;
                margin-right: auto;
            }
        }

        .pricing-table {
            display: flex;
            flex-direction: column;
        }

        .pricing-header {
            display: flex;
            @include adaptive(padding-bottom, 30, 15);
            @include adaptive(padding-left, 54, 0);
            @include adaptive(padding-right, 54, 0);
            border-bottom: 1px solid $color-globus-sand;
        }

        .header-cell {
            @include font-circe-regular;
            @include adaptive(font-size, 20, 18);
            line-height: 1.2;
            color: $color-globus-blue;
            opacity: 0.6;

            &:nth-child(1) {
                @include adaptive(width, 44%, 36%);
            }

            &:nth-child(2) {
                @include adaptive(width, 35%, 24%);
            }

            &:nth-child(3) {
                flex: 1;
                @include adaptive(padding-right, 7%, 14%);
                text-align: right;
            }
        }

        .pricing-row {
            display: flex;
            align-items: center;
            @include adaptive(padding-top, 32, 17);
            @include adaptive(padding-bottom, 32, 17);
            @include adaptive(padding-left, 54, 0);
            @include adaptive(padding-right, 54, 0);
            border-bottom: 1px solid $color-globus-sand;

            .button {
                @include adaptive(font-size, 26, 26);
                color: $color-globus-blue;
                @include adaptive(min-width, 273, 172);
                text-transform: none;
                letter-spacing: normal;
            }
        }

        .pricing-cell {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 26);
            line-height: 1.2;
            color: $color-globus-blue;

            &:nth-child(1) {
                @include adaptive(width, 44%, 36%);
            }

            &:nth-child(2) {
                @include adaptive(width, 35%, 24%);
                @include adaptive(padding-left, 1.5%, 4%);
            }

            &:nth-child(3) {
                flex: 1;
            }
        }

        .pricing-cell-price {
            display: flex;
            justify-content: flex-end;
        }
    }
</style>
