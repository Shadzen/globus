---
const pricingData = [
    {
        accommodation: 'Комфорт',
        meal: 'AI',
        price: 'от 1960 $',
    },
    {
        accommodation: 'Эконом',
        meal: 'BB',
        price: 'от 1500$',
    },
    {
        accommodation: 'Комфорт+',
        meal: 'BB',
        price: 'от 2340 $',
    },
    {
        accommodation: 'Комфорт',
        meal: 'AI',
        price: 'от 1960 $',
    },
    {
        accommodation: 'Эконом',
        meal: 'BB',
        price: 'от 1500$',
    },
    {
        accommodation: 'Комфорт+',
        meal: 'BB',
        price: 'от 2340 $',
    },
]
---

<section class="hotel-pricing">
    <!-- Search Form -->
    <div class="pricing-search-form">
        <div class="pricing-search-container">
            <div class="search-field">
                <label for="departure-date" class="search-label">Дата вылета</label>
                <input
                    type="text"
                    id="departure-date"
                    name="departure-date"
                    class="search-input"
                    placeholder="16 сен - 25 сен"
                />
            </div>

            <div class="search-field">
                <label for="tourists" class="search-label">Туристы</label>
                <input
                    type="text"
                    id="tourists"
                    name="tourists"
                    class="search-input"
                    placeholder="2 взрослых"
                />
            </div>

            <button class="search-button">Найти</button>
        </div>
    </div>

    <!-- Pricing Table -->
    <div class="pricing-table-container">
        <div class="pricing-table">
            <!-- Table Header -->
            <div class="pricing-header">
                <div class="header-cell">Размещение</div>
                <div class="header-cell">Питание</div>
                <div class="header-cell">Цена</div>
            </div>

            <!-- Table Rows -->
            {
                pricingData.map((item) => (
                    <div class="pricing-row">
                        <div class="pricing-cell">{item.accommodation}</div>
                        <div class="pricing-cell">{item.meal}</div>
                        <div class="pricing-cell pricing-cell-price">
                            <button class="price-button">{item.price}</button>
                        </div>
                    </div>
                ))
            }
        </div>

        <button class="contact-manager-button">написать менеджеру</button>
    </div>
</section>

<style lang="scss" is:global>
    .hotel-pricing {
        // Search Form
        .pricing-search-form {
            background: $color-alternate;
            @include adaptive(padding-top, 64, 40);
            @include adaptive(padding-bottom, 64, 40);
        }

        .pricing-search-container {
            @include side-paddings;
            display: flex;
            align-items: flex-end;
            @include adaptive(gap, 40, 20);
            flex-wrap: wrap;

            @include mobile {
                flex-direction: column;
                align-items: stretch;
            }
        }

        .search-field {
            display: flex;
            flex-direction: column;
            @include adaptive(gap, 12, 10);
            flex: 1;
            min-width: 0;

            @include mobile {
                flex: none;
                width: 100%;
            }
        }

        .search-label {
            @include font-circe-regular;
            @include adaptive(font-size, 16, 14);
            line-height: 1.6;
            @include adaptive(letter-spacing, 3.2, 2.8);
            text-transform: uppercase;
            color: $color-main;
            opacity: 0.55;
        }

        .search-input {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 20);
            line-height: 1.2;
            color: $color-main;
            background: transparent;
            border: none;
            border-bottom: 1px solid rgba($color-main, 0.3);
            @include adaptive(padding-bottom, 12, 10);
            outline: none;
            cursor: pointer;
            transition: border-color 0.3s;

            &:hover,
            &:focus {
                border-bottom-color: rgba($color-main, 0.6);
            }
        }

        .search-button {
            @include button-default;
            @include adaptive(padding-left, 50, 30);
            @include adaptive(padding-right, 50, 30);
            @include adaptive(padding-top, 16, 14);
            @include adaptive(padding-bottom, 16, 14);
            @include adaptive(height, 60, 50);
            flex-shrink: 0;

            @include mobile {
                width: 100%;
                margin-top: 10px;
            }
        }

        // Pricing Table
        .pricing-table-container {
            @include side-paddings;
            @include adaptive(padding-top, 80, 50);
        }

        .pricing-table {
            display: flex;
            flex-direction: column;
        }

        .pricing-header {
            display: flex;
            @include adaptive(padding-bottom, 40, 30);
            border-bottom: 1px solid $color-accent;

            @include mobile {
                display: none;
            }
        }

        .header-cell {
            @include font-circe-regular;
            @include adaptive(font-size, 20, 18);
            line-height: 1.2;
            color: $color-alternate;
            opacity: 0.6;
            flex: 1;

            &:nth-child(1) {
                flex: 1.2;
            }

            &:nth-child(2) {
                flex: 1;
            }

            &:nth-child(3) {
                flex: 1.2;
                text-align: right;
            }
        }

        .pricing-row {
            display: flex;
            align-items: center;
            @include adaptive(padding-top, 56, 30);
            @include adaptive(padding-bottom, 56, 30);
            border-bottom: 1px solid rgba($color-alternate, 0.2);

            @include mobile {
                flex-wrap: wrap;
                @include adaptive(gap, 16, 12);
            }

            &:last-child {
                border-bottom: none;
            }
        }

        .pricing-cell {
            @include font-circe-regular;
            font-weight: 300;
            @include adaptive(font-size, 26, 20);
            line-height: 1.2;
            color: $color-alternate;
            flex: 1;

            &:nth-child(1) {
                flex: 1.2;

                @include mobile {
                    flex: none;
                    width: 100%;
                    font-weight: 400;
                }
            }

            &:nth-child(2) {
                flex: 1;

                @include mobile {
                    flex: none;
                    width: auto;

                    &::before {
                        content: 'Питание: ';
                        opacity: 0.6;
                    }
                }
            }

            &:nth-child(3) {
                flex: 1.2;

                @include mobile {
                    flex: none;
                    width: 100%;
                }
            }
        }

        .pricing-cell-price {
            display: flex;
            justify-content: flex-end;

            @include mobile {
                justify-content: flex-start;
            }
        }

        .price-button {
            @include font-circe-regular;
            @include adaptive(font-size, 26, 20);
            line-height: 1.2;
            color: $color-alternate;
            background: transparent;
            border: 2px solid $color-accent;
            border-radius: 50px;
            @include adaptive(padding-left, 50, 30);
            @include adaptive(padding-right, 50, 30);
            @include adaptive(padding-top, 16, 14);
            @include adaptive(padding-bottom, 16, 14);
            @include adaptive(height, 61, 50);
            cursor: pointer;
            transition: all 0.3s;
            white-space: nowrap;

            &:hover {
                background: rgba($color-accent, 0.1);
                transform: translateY(-2px);
            }

            &:active {
                transform: translateY(0);
            }

            @include mobile {
                width: 100%;
            }
        }

        .contact-manager-button {
            @include button-default;
            @include adaptive(padding-left, 50, 30);
            @include adaptive(padding-right, 50, 30);
            @include adaptive(padding-top, 16, 14);
            @include adaptive(padding-bottom, 16, 14);
            @include adaptive(height, 61, 50);
            @include adaptive(margin-top, 60, 40);
            margin-left: auto;
            margin-right: auto;
            display: flex;
        }
    }
</style>
