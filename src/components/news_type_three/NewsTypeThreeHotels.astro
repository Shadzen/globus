---
import photo3 from '@/assets/images/news_type_three/news-type-three-photo-3.jpg'

interface Hotel {
    name: string
    price: string
    image: string
    badge: string
}

const hotels: Hotel[] = [
    {
        name: 'ATLANTIS THE PALM DUBAI 5*',
        price: 'от 366 300 руб/чел',
        image: photo3.src,
        badge: 'BB',
    },
    {
        name: 'ATLANTIS THE ROYAL 5*',
        price: 'от 616 600 руб/чел',
        image: photo3.src,
        badge: 'BB',
    },
    {
        name: 'ATLANTIS THE PALM DUBAI 5*',
        price: 'от 366 300 руб/чел',
        image: photo3.src,
        badge: 'BB',
    },
]
---

<section class="news-type-three-hotels-section">
    <div class="section-container">
        <h2 class="hotels-main-title">Стоимость проживания на 7 ночей с 28.12:</h2>

        <div class="hotels-grid">
            {hotels.map((hotel) => (
                <div class="card">
                    <div class="card-image">
                        <img src={hotel.image} alt={hotel.name} loading="lazy" decoding="async" />
                        <div class="card-badge">{hotel.badge}</div>
                    </div>
                    <h3 class="card-title">{hotel.name}</h3>
                    <p class="card-price">{hotel.price}</p>
                    <button class="button _sized">Забронировать</button>
                </div>
            ))}
        </div>

        <div class="divider" />

        <div class="info-grid">
            <div class="info-item">
                <h3 class="info-title">В стоимость тура включено:</h3>
                <p class="info-text">проживание с завтраками</p>
            </div>
            <div class="info-item">
                <h3 class="info-title">Дополнительно оплачивается:</h3>
                <p class="info-text">перелет в Дубай, билеты на концерт с ужином и трансфер аэропорт-отель-аэропорт.</p>
            </div>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    .news-type-three-hotels-section {
        @include adaptive(margin-top, 120, 60);

        .hotels-main-title {
            @include adaptive(font-size, 32, 26);
            @include adaptive(margin-bottom, 50, 30);
        }

        .hotels-grid {
            display: flex;
            flex-wrap: wrap;
            @include adaptive(gap, 40, 40);

            @include mobile {
                flex-direction: column;
            }
        }

        .card {
            @include adaptive(width, 48.8%, 100%);
        }

        .card-image {
            @include adaptive(height, 280, 231);
        }

        .card-badge {
            position: absolute;
            @include adaptive(left, 28, 20);
            @include adaptive(bottom, 20, 15);
            @include adaptive(height, 44, 34);
        }

        .button {
            @include adaptive(width, 273, 100%);
        }

        .divider {
            @include adaptive(margin-top, 50, 50);
            @include adaptive(margin-bottom, 50, 50);
        }

        .info-grid {
            display: flex;
            @include adaptive(gap, 40, 20);

            @include mobile {
                flex-direction: column;
            }
        }

        .info-item {
            flex: 1;
        }

        .info-title {
            @include font-kudry-sans;
            color: $color-globus-sand;
            @include adaptive(font-size, 28, 26);
            @include adaptive(margin-bottom, 10, 8);
        }

        .info-text {
            @include font-circe-light;
            color: $color-alternate;
            @include adaptive(font-size, 26, 18);
            line-height: 1.2;
            @include adaptive(width, 70%, 100%);
        }
    }
</style>
